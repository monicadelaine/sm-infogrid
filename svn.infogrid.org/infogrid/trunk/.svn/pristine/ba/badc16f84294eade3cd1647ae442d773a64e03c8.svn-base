* {
    font-family: "lucida grande", tahoma, verdana, arial, sans-serif;
    border: #ff0000 solid 0px;
}
table {
    border-collapse: collapse;
    width: 100%;
}
a img {
    border: 0;
}
td.top {
    vertical-align: top;
}
td.bottom {
    vertical-align: bottom;
}
td.left {
    text-align: left;
}
td.right {
    text-align: right;
}

h1 {
    font-size: 150%;
    font-weight: normal;
}
h2 {
    font-size: 150%;
}
h3 {
    font-size: 120%;
}

body {
    background: #ffffff;
    margin: 0;
    padding: 0;
}

div#canvas-identity > div.canvas-main > ul {
    float: right;
}
div#canvas-identity > div.canvas-main > ul > li {
    list-style: none;
}
div.canvas-main {
    width: 750px;
    margin: 0 auto;
    padding: 0 20px;
}

#canvas-top {
    width: 100%;
    margin: 0;
    padding: 0;
    font-size: 12px;
}
#canvas-company-row {
    width: 100%;
    margin: 0;
    padding: 5px 0;
}
#canvas-company-row > div.canvas-main {
    height: 50px;
    border-width: 0 0 2px 0;
}
#canvas-company-row h1 {
    padding: 9px 0 0 0;
}
div.canvas-company-logo {
    float: left;
    margin-right: 15px;
}

div#canvas-middle > div.canvas-main {
    padding-top: 35px;
    padding-bottom: 20px;
    min-height: 300px;
}

#canvas-bottom {
    color: #808080;
    font-size: 67%;
    text-align: center;
}
#canvas-bottom > div.canvas-main {
    margin-top: 10px;
    padding-top: 10px;
    border-width: 2px 0 0 0;
}
.copy > p {
    margin-left: 2em;
}
a.built-on-infogrid {
    float: right;
    margin-left: 10px;
    margin-top: -5px;
}

div.attributes {
    padding: 0px 5px 5px 50px;
}
div.attributes col.label {
    width: 200px;
}
div.attributes th {
    padding: 5px 10px;
    border: 1px solid #808080;
}
div.attributes td {
    padding: 5px 10px;
    border: 1px solid #d0d0d0;
}

div.errors {
    margin: 0;
    padding: 10px;
    border: 1px solid;
    background: #ffe0e0;
    border-color: #f0d0d0;
}
div.errors .stacktrace {
    font-size: 12px;
    overflow-x: scroll;
}
div.errors > h2 {
    margin: 0;
    color: red;
}
div.error {
    margin: 10px 10px 10px 20px;
}
